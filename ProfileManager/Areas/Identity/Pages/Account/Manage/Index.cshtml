    <div class="form-group mt-3">
        <label asp-for="Profile.Introduction" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <textarea asp-for="Profile.Introduction" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            <span asp-validation-for="Profile.Introduction" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Profile.MemberId" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <input asp-for="Profile.MemberId" class="form-control" aria-required="false" readonly/>
            <span asp-validation-for="Profile.MemberId" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group mt-3 required">
        <label asp-for="Profile.FirstName" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <input asp-for="Profile.FirstName" class="form-control" aria-required="false" />
            <span asp-validation-for="Profile.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Profile.LastName" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <input asp-for="Profile.LastName" class="form-control" aria-required="false" />
            <span asp-validation-for="Profile.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.Gender" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10 mb-3">
            <div class="form-check form-check-inline">
                <input asp-for="Profile.Gender" class="form-check-input" type="radio" id="inlineRadio1" value="Male">
                <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Profile.Gender" class="form-check-input" type="radio" id="inlineRadio2" value="Female">
                <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>
            <span asp-validation-for="Profile.Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.BirthDateTime" class="control-label col-md-3 mb-1"></label>
        <div class="col-md-10 mb-3">
            <input type="text" asp-for="Profile.BirthDateTime" class="form-control" id="datepicker" />
            <span asp-validation-for="Profile.BirthDateTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.CivilStatus" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.CivilStatus" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.CivilStatusEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.CivilStatus" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group mt-3">
        <label asp-for="Profile.Job" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.Job" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.JobEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.Job" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.Cast" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.Cast" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.CastEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.Cast" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.Race" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.Race" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.RaceEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.Race" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.Religion" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.Religion" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.ReligionEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.Religion" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group mt-3 required">
        <label asp-for="Profile.City" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.City" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.CityEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.District" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.District" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.DistrictEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.District" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3 required">
        <label asp-for="Profile.Country" class="control-label col-md-2 mb-1"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Profile.Country" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.CountryEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Profile.Country" class="text-danger"></span>
        </div>
    </div>



    <button type="submit" class="w-25 btn btn-md btn-primary mt-4 mb-4">Next to Parents Data</button>
</form>

