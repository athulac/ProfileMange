@page
@model ProfileManager.Areas.Identity.Pages.Account.RegisterExtraModel
@{
    ViewData["Title"] = "Register - Extra";
}




<div class="row">

    <div class="col-md-1" style=""></div>

    <div class="col-md-6">
        <div class="px-2" style="padding-top:30%">
            <center>
                <h3>Add more details</h3>
                <hr />
                <p>
                    Please add more details for your account.
                </p>
            </center>
        </div>
    </div>


    <div class="col-md-4">
        
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"> 

            <input type="hidden" asp-for="Input.Profile.UserId" class="form-control" aria-required="false" />

            <div class="form-group mt-3">
                <label asp-for="Input.Profile.Job" class="control-label col-md-3 mb-1"></label>
                <div class="col-md-10">
                    <select class="form-control" asp-for="Input.Profile.Job" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.JobEnum>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Input.Profile.Job" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 required">
                <label asp-for="Input.Profile.Cast" class="control-label col-md-3 mb-1"></label>
                <div class="col-md-10">
                    <select class="form-control" asp-for="Input.Profile.Cast" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.CastEnum>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Input.Profile.Cast" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 required">
                <label asp-for="Input.Profile.Race" class="control-label col-md-3 mb-1"></label>
                <div class="col-md-10">
                    <select class="form-control" asp-for="Input.Profile.Race" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.RaceEnum>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Input.Profile.Race" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 required">
                <label asp-for="Input.Profile.Religion" class="control-label col-md-3 mb-1"></label>
                <div class="col-md-10">
                    <select class="form-control" asp-for="Input.Profile.Religion" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.ReligionEnum>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Input.Profile.Religion" class="text-danger"></span>
                </div>
            </div>




            <div class="form-group mt-3">
                <label asp-for="Input.Profile.City" class="control-label col-md-2 mb-1"></label>
                <div class="col-md-10">
                    <select class="form-control" asp-for="Input.Profile.City" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.CityEnum>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Input.Profile.City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Input.Profile.District" class="control-label col-md-2 mb-1"></label>
                <div class="col-md-10">
                    <select class="form-control" asp-for="Input.Profile.District" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.DistrictEnum>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Input.Profile.District" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Input.Profile.Country" class="control-label col-md-2 mb-1"></label>
                <div class="col-md-10">
                    <select class="form-control" asp-for="Input.Profile.Country" asp-items="Html.GetEnumSelectList<ProfileManager.Common.Enums.CountryEnum>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Input.Profile.Country" class="text-danger"></span>
                </div>
            </div>


            @* <button id="registerSubmit" type="submit" class="w-25 btn btn-md btn-primary mt-4">Next</button> *@

            <a class="w-25 btn btn-outline-dark my-5" href='javascript:history.go(-1)'>Back</a>
            <button type="submit" class="w-25 btn btn-md btn-primary my-5">Next</button>
        </form>
    </div>

</div>

